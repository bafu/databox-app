if(containers && containers.length > 0)
	div(style="padding: 24px 0")
		div.mdc-list.mdc-list--two-line.mdc-elevation--z3(style="background-color: white;")
			each container in containers
				a.mdc-list-item(href="#!/" + container.name + '/ui', data-mdc-auto-init="MDCRipple")
					span.mdc-list-item__start-detail.app-icon-letter-small
						= container.name.replace('databox_', '').replace('app-','').replace('driver-','').charAt(0).toUpperCase()
					span.mdc-list-item__text
						= container.name.replace('databox_', '').replace('app-','').replace('driver-','').replace(/-/g,' ')
						span.mdc-list-item__text__secondary(style=container.state === 'running' ? '' : 'color: #F00')
							= container.state
					if container.type !== 'system'
						if container.desiredState === 'running'
							span(style="display: flex;margin-left: auto")
								span.material-icons.mdc-list-item__end-detail.mdc-icon-toggle(onclick='app_restart(event, \'' + container.name + '\')')
									| refresh
								span.material-icons.mdc-list-item__end-detail.mdc-icon-toggle(onclick='app_uninstall(event, \'' + container.name + '\')')
									| close
						else
							svg.mdc-list-item__end-detail.spinner(viewBox="0 0 66 66", xmlns="http://www.w3.org/2000/svg")
								circle.path(fill="none", stroke-width="6", stroke-linecap="square", cx="33", cy="33", r="30")
else
	div(style="padding: 48px; text-align: center")
		| Empty