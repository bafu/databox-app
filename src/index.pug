doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		meta(name='mobile-web-app-capable', content="yes")
		meta(name="apple-mobile-web-app-capable", content="yes")
		meta(name="theme-color", content="#3f51b5")
		link(rel="manifest", href="icons/manifest.json")
		link(rel="apple-touch-icon", sizes="57x57", href="icons/apple-icon-57.png")
		link(rel="apple-touch-icon", sizes="76x76", href="icons/apple-icon-76.png")
		link(rel="apple-touch-icon", sizes="120x120", href="icons/apple-icon-120.png")
		link(rel="apple-touch-icon", sizes="152x152", href="icons/apple-icon-152.png")
		link(rel="apple-touch-icon", sizes="180x180", href="icons/apple-icon-180.png")
		link(rel="icon", type="image/png", sizes="16x16", href="icons/favicon-16.png")
		link(rel="icon", type="image/png", sizes="32x32", href="icons/favicon-32.png")
		link(rel="icon", type="image/png", sizes="96x96", href="icons/android-icon-96.png")
		link(rel="icon", type="image/png", sizes="192x192", href="icons/android-icon-192.png")
		link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
		link(rel='stylesheet', href='css/material-components-web.min.css')
		link(rel='stylesheet', href='css/appstore.css')
		title Databox
		script(src="cordova.js", defer=true)
		script(src='js/material-components-web.min.js', defer=true)
		script(src="js/navigo.min.js", defer=true)
		script(src="js/templates/alert.js", defer=true)
		script(src="js/templates/app.js", defer=true)
		script(src="js/templates/app-config.js", defer=true)
		script(src="js/templates/app-list.js", defer=true)
		script(src="js/templates/app-list-installed.js", defer=true)
		script(src="js/templates/connect.js", defer=true)
		script(src="js/templates/sensor-list.js", defer=true)
		script(src="js/templates/spinner.js", defer=true)
		script(src="js/templates/welcome.js", defer=true)
		script(src="js/index.js", defer=true)
		script(src="js/app-install.js", defer=true)
		script(src="js/app-control.js", defer=true)
	body
		header.mdc-toolbar.mdc-toolbar--fixed.mdc-toolbar--fixed.mdc-theme--dark
			div#toolbar.mdc-toolbar__row
				section.mdc-toolbar__section.mdc-toolbar__section--align-start
					a#navicon.mdc-icon-toggle.material-icons
						| menu
					a#backicon.mdc-icon-toggle.material-icons
						| arrow_back
					span#toolbartitle.mdc-toolbar__title
						| Databox

				section.mdc-toolbar__section.mdc-toolbar__section--align-end.mdc-toolbar__section--shrink-to-fit
					a#searchicon.mdc-icon-toggle.material-icons.search.align-icons(title="Search", href="#!/search/")
						| search

			div#toolbar-search.mdc-toolbar__row
				section.mdc-toolbar__section.mdc-toolbar__section--align-start
					a#searchbackicon.mdc-icon-toggle.material-icons
						| arrow_back
					label.mdc-textfield
						input#toolbar-search__input.mdc-textfield__input(placeholder='Search')

		aside.mdc-temporary-drawer.mdc-typography
			nav.mdc-temporary-drawer__drawer
				header.mdc-temporary-drawer__header.mdc-theme--dark
					div.mdc-temporary-drawer__header-content(style="background: url('img/boxes_coloured.png'); background-size: cover; color: #FFF")
						div(style="width: 100%;")
							div.mdc-typography--title
								| Databox
							div#hostname.mdc-typography--caption
				nav#nav.mdc-temporary-drawer__content.mdc-list
					a.mdc-list-item(href="#!")
						i.material-icons.mdc-list-item__start-detail
							| home
						| Welcome
					a.mdc-list-item(href="#!/driver/app")
						i.material-icons.mdc-list-item__start-detail
							| store
						| App Store
					a.mdc-list-item(href="#!/driver/store")
						i.material-icons.mdc-list-item__start-detail
							| store
						| Driver Store
					a.mdc-list-item#sensing(href="#!/sensing")
						i.material-icons.mdc-list-item__start-detail
							| network_check
						| Mobile Sensor Data
					div.mdc-list-group__subheader(style="margin: 16px 0 0 16px")
						| Installed
					a.mdc-list-item(href="#!/app/installed")
						i.material-icons.mdc-list-item__start-detail
							| extension
						| Apps
					a.mdc-list-item(href="#!/driver/installed")
						i.material-icons.mdc-list-item__start-detail
							| developer_board
						| Drivers
					a.mdc-list-item(href="#!/store/installed")
						i.material-icons.mdc-list-item__start-detail
							| dns
						| Stores
					a.mdc-list-item(href="#!/system/installed")
						i.material-icons.mdc-list-item__start-detail
							| settings_applications
						| System

		main#content.mdc-toolbar-fixed-adjust.mdc-typography
			include templates/spinner