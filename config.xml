<?xml version='1.0' encoding='utf-8'?>
<widget id="io.databox.app" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Databox</name>
    <description>
		Databox App
	</description>
    <author email="dev@cordova.apache.org" href="http://databox.io">
		Databox
	</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="StatusBarBackgroundColor" value="#2d3980" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icons/android-icon-36x36.png" />
        <icon density="mdpi" src="res/icons/android-icon-48x48.png" />
        <icon density="hdpi" src="res/icons/android-icon-72x72.png" />
        <icon density="xhdpi" src="res/icons/android-icon-96x96.png" />
        <icon density="xxhdpi" src="res/icons/android-icon-144x144.png" />
        <icon density="xxxhdpi" src="res/icons/android-icon-192x192.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <engine name="browser" spec="^5.0.0" />
    <plugin name="cordova-plugin-qrscanner" spec="^2.5.0" />
    <plugin name="cordova-plugin-sensingKit" spec="http://github.com/ktg/cordova-plugin-sensingKit.git" />
    <plugin name="cordova-plugin-statusbar" spec="^2.2.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
