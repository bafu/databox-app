<?xml version='1.0' encoding='utf-8'?>
<widget id="io.databox.app" version="0.3.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Databox</name>
    <description>
		Databox App
	</description>
    <author email="dev@cordova.apache.org" href="http://databox.io">
		Databox
	</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#2d3980" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icons/android-icon-36.png" />
        <icon density="mdpi" src="res/icons/android-icon-48.png" />
        <icon density="hdpi" src="res/icons/android-icon-72.png" />
        <icon density="xhdpi" src="res/icons/android-icon-96.png" />
        <icon density="xxhdpi" src="res/icons/android-icon-144.png" />
        <icon density="xxxhdpi" src="res/icons/android-icon-192.png" />
    </platform>
    <platform name="ios">
        <feature name="StatusBar">
            <param name="ios-package" onload="true" value="CDVStatusBar" />
        </feature>
        <icon height="40" src="res/icons/apple-icon-40.png" width="40" />
        <icon height="57" src="res/icons/apple-icon-57.png" width="57" />
        <icon height="76" src="res/icons/apple-icon-76.png" width="76" />
        <icon height="120" src="res/icons/apple-icon-120.png" width="120" />
        <icon height="152" src="res/icons/apple-icon-152.png" width="152" />
        <icon height="167" src="res/icons/apple-icon-167.png" width="167" />
        <icon height="180" src="res/icons/apple-icon-180.png" width="180" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.3.0" />
    <engine name="browser" spec="^5.0.0" />
    <engine name="ios" spec="^4.5.1" />
    <plugin name="cordova-plugin-qrscanner" spec="^2.5.0" />
    <plugin name="cordova-plugin-sensingKit" spec="https://github.com/ktg/cordova-plugin-sensingkit.git" />
    <plugin name="cordova-plugin-statusbar" spec="^2.2.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
